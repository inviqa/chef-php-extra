; Configuration generated by chef
extension = <%= @params['zend_extension'] %>

[xcache.admin]
xcache.admin.auth = <%= @params['admin.auth'] %>
xcache.admin.user = "<%= @params['admin.user'] %>"

; xcache.admin.pass should be md5($your_password), or empty to disable administration.
xcache.admin.pass = "<%= @params['admin.pass'] %>"
xcache.test =       <%= @params['test'] %>
;xcache.coredump_directory = ""

[xcache]
xcache.cacher =               <%= @params['cacher'] %>
xcache.size  =                <%= @params['size'] %>
xcache.count =                <%= @params['count'] %>
xcache.slots =                <%= @params['slots'] %>
xcache.ttl   =                <%= @params['ttl'] %>
xcache.gc_interval =          <%= @params['gc_interval'] %>
xcache.stat =                 <%= @params['stat'] %>

; Same as aboves but for variable cache
; If you don't know for sure that you need this, you probably don't
xcache.var_size  =            <%= @params['var_size'] %>
xcache.var_count =            <%= @params['var_count'] %>
xcache.var_slots =            <%= @params['var_slots'] %>
xcache.var_ttl   =            <%= @params['var_ttl'] %>
xcache.var_maxttl   =         <%= @params['var_maxttl'] %>
xcache.var_gc_interval =      <%= @params['var_gc_interval'] %>

; N/A for /dev/zero
xcache.readonly_protection = <%= @params['readonly_protection'] %>

; Use something like "/tmp/xcache" if you want to turn on ReadonlyProtection
; 2 group of php won't share the same /tmp/xcache
xcache.mmap_path =    "<%= @params['mmap_path'] %>"

xcache.optimizer =    <%= @params['optimizer'] %>

xcache.coverager =    <%= @params['coverager'] %>
;xcache.coveragedump_directory = "/tmp/pcov"
